<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="rootLayout" prefHeight="600.0" prefWidth="800.0" styleClass="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="com.coldhamix.clubApp.controller.RootLayoutController">
  <!-- TODO Add Nodes -->
  <bottom>
    <HBox prefHeight="21.0" prefWidth="800.0" styleClass="programStatus">
      <children>
        <Label fx:id="statusBarLabel" text="" />
      </children>
    </HBox>
  </bottom>
  <center>
    <Label text="Выберите пункт меню" textAlignment="LEFT" textFill="#9f9f9f">
      <font>
        <Font size="18.0" />
      </font>
    </Label>
  </center>
  <stylesheets>
    <URL value="@main.css" />
  </stylesheets>
  <top>
    <AnchorPane prefHeight="65.0" prefWidth="800.0" styleClass="programPanel">
      <children>
        <Label layoutX="14.0" styleClass="labelTitle" text="Детский Клуб" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0" />
        <HBox id="HBox" alignment="CENTER" spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="0.0">
          <children>
            <Button fx:id="goToPayments" mnemonicParsing="false" onAction="#showPayments" prefHeight="65.0" styleClass="topMenuButton" text="ОПЛАТА" />
            <Button fx:id="goToStudents" mnemonicParsing="false" onAction="#showStudents" prefHeight="65.0" styleClass="topMenuButton" text="УЧЕНИКИ" />
            <Button fx:id="goToLessons" mnemonicParsing="false" onAction="#showCourses" prefHeight="65.0" styleClass="topMenuButton" text="КУРСЫ" />
            <Button fx:id="goToGroups" mnemonicParsing="false" onAction="#showGroups" prefHeight="65.0" styleClass="topMenuButton" text="ГРУППЫ" />
            <Button fx:id="goToVisits" mnemonicParsing="false" onAction="#showVisits" prefHeight="65.0" styleClass="topMenuButton" text="ПОСЕЩЕНИЯ" />
          </children>
        </HBox>
      </children>
    </AnchorPane>
  </top>
</BorderPane>
